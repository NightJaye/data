extends layout

block content
 h2.page-header 註冊
 b 註冊享有免運費優惠
 p
    //Show error message
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}

 form(method='post', action='/users/register', enctype='multipart/form-data')
   //multipart/form-data: 表單中要upload file時使用
  .form-group
   label 名字
   input.form-control(name='name', type='text', placeholder='輸入名字')
  .form-group
   label 電子郵件
   input.form-control(name='email', type='email', placeholder='輸入電子郵件地址')
  .form-group
   label 使用者名稱
   input.form-control(name='username', type='text', placeholder='輸入使用者名稱')
  .form-group   
   label 密碼
   input.form-control(name='password', type='password', placeholder='輸入密碼')
  .form-group   
   label 確定密碼
   input.form-control(name='password2', type='password', placeholder='再次輸入密碼')
  .form-group     
   label 個人照片
   input.form-control(name='profileimage', type='file')
  .form-group
   input.btn.btn-primary(type='submit', name='submit', value='送出')